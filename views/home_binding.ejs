<% 
let saveBtnClass = "disabled"
if (username) {
     // meaning user is logged in 
     saveBtnClass = ""
     %>
    <p id="greeting-msg">Welcome back <span id="username-display"><%= username  %></span>!</p>
    
<% } %>
<div id="content-container">

    <div id="left-section">
        <div id="button-cont" class="hidden">
            <button id="reset-button"><i class="fa-solid fa-rotate-left"></i>Reset all</button>
            <button id="import-button"><i class="fa-solid fa-file-import"></i>Import from device</button>
            <button id="save-button" class="<%= saveBtnClass %>"><i class="fa-solid fa-floppy-disk"></i>Save current</button>
        </div>
        <button id="controls-button">Show controls</button>
    </div>

    <div id="center-section">
        <p id="status-message"></p>

        <div id="connection-cont">
            <div id="connection-icon"></div>
            <p id="connection-msg"></p>
            <button type="submit" id="connect-button"></button>
            
            </div>
            
        <div id="buttons-container">
            <button class="button-bind" id="key-1" data-key-num="1"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-2" data-key-num="2"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-3" data-key-num="3"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-4" data-key-num="4"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-5" data-key-num="5"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-6" data-key-num="6"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-7" data-key-num="7"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-8" data-key-num="8"><i class="fa-solid fa-wrench"></i> Press to bind</button>
            <button class="button-bind" id="key-9" data-key-num="9"><i class="fa-solid fa-wrench"></i> Press to bind</button>
        </div>
        <button type="submit" id="submit-button"><i class="fa-solid fa-circle-check"></i>Submit</button>
    </div>

    <div id="right-section">
        <textarea id="log-area" class="hidden" readonly>---LOG---  FOR DEBUG
        </textarea>
        <button id="toggle-textarea">Show log</button>
    </div>
</div>
